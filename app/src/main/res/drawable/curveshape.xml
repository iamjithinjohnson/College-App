        </shape>

    </item>


    <item
        android:bottom="1px"
        >
        <shape  android:shape="rectangle">
            <solid android:color="#FFF" />
            <corners
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp"/>
        </shape>

    </item>



</layer-list>